<%
var post = page;
%>


<div class="container">
    <div class='row text-center'>
        <h1>Post.ejs</h1>
    </div>
    <div class='row'>
        <ul>
            <li>
                <h3>
                    <a href="<%- url_for(post.path) %>">
                        <%= post.title %>
                    </a>
                </h3>
                <div class='text-muted'>
                    <%= date(post.date, config.date_format) %>
                </div>
                <p>
                    <%- post.content%>
                </p>
                <% if(post.excerpt) { %>
                    <p>
                        <%- post.excerpt %>
                    </p>
                <% } %>
            </li>
        </ul>
    </div>

</div>